    <odoo>
        <record id="view_subindustry_tree" model="ir.ui.view">
            <field name="name">res.partner.subindustry.tree</field>
            <field name="model">res.partner.subindustry</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="industry_id"/>
                </list>
            </field>
        </record>

        <record id="view_subindustry_form" model="ir.ui.view">
            <field name="name">res.partner.subindustry.form</field>
            <field name="model">res.partner.subindustry</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="industry_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_subindustry" model="ir.actions.act_window">
            <field name="name">Subindustrias</field>
            <field name="res_model">res.partner.subindustry</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_subindustry"
                name="Subindustrias"
                parent="contacts.res_partner_menu_config"
                
                action="action_subindustry"
                sequence="4"/>
        
        <!--contacts.menu_partner_industry
        contacts.res_partner_industry_menu
        contacts.menu_partner_industry
        -->          
        <record id="view_partner_form_inherit_subindustry" model="ir.ui.view">
            <field name="name">res.partner.form.subindustry</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
            <!-- Insertar dentro de la pestaÃ±a ventas y compras -->
            <xpath expr="//page[@name='sales_purchases']/group/group[@name='misc']/field[@name='industry_id']" position="after">
                
                <field name="subindustry_id" />

                <field name="anmat_certification" string="CertificaciÃ³n ANMAT" />
                <field name="subclient_id"/>
                
            </xpath>
            </field>
    </record>
